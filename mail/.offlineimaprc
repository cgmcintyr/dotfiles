# Offline IMAP configuration for a work and personal email account.

[general]
accounts = christophermcintyre
maxsyncaccounts = 1
pythonfile = ~/.offlineimap.py
ui = basic

[Account christophermcintyre]
localrepository = christophermcintyre-local
remoterepository = christophermcintyre-remote
autorefresh = 5
quick = 10

[Repository christophermcintyre-local]
type = Maildir
localfolders = ~/.mail/christophermcintyre

[Repository christophermcintyre-remote]
type = IMAP
remotehost = mail.codethink.co.uk
remoteuser = christophermcintyre@codethink.co.uk
remotepasseval = mailpasswd("christophermcintyre")
ssl = yes
sslcacertfile = /etc/ssl/certs/ca-certificates.crt
keepalive = 60
holdconnectionopen = yes

# this writes the mailbox names to a file which is
# then sourced by mutt
[mbnames]
enabled = yes
filename = ~/.mutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"
