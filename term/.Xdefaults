!-[General settings]---
URxvt.termName: xterm-256color
URxvt*loginShell: true
URxvt*geometry: 80x25
URxvt.saveLines: 2000
URxvt.urgentOnBell: True
URxvt.cursorBlink: False
URxvt.fading: 10
URxvt.lineSpace: 1

!-[Font Rendering]-----
Xft.dpi: $template.x.xft_dpi$
Xft.antialias: true
Xft.hinting: true
Xft.autohint: false
Xft.rgba: rgb
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault

!-[Scrollbar]----------
URxvt.scrollBar: false
URxvt.scrollBar_right: false
URxvt.scrollBar_floating: false
URxvt.scrollstyle: rxvt

!-[Clipboard]----------
URxvt.perl-ext-common:        default,xkr-clipboard
URxvt.iso14755:               false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
URxvt.keysym.Control-Insert:  perl:clipboard:copy
URxvt.copyCommand: xsel -ib
URxvt.pasteCommand: xsel -ob

!-[Clickable URLs]-----
urxvt*perl-lib:            /usr/lib/urxvt/perl/
urxvt*perl-ext-common:        default,matcher
urxvt*urlLauncher:        /usr/bin/firefox
urxvt*matcher.button:        1
urxvt*matcher.pattern.1:   \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]

!-[Fonts]--------------
#define termfont	xft:DejavuSansMono:medium:pixelsize=14
#define termfontbold	xft:DejavuSansMono:bold:pixelsize=14
URxvt.font:           termfont
URxvt.boldFont:       termfontbold
URxvt.italicFont:     termfont
URxvt.boldItalicFont: termfontbold
URxvt.letterSpace: -1

!-[Xterm]-------------
xterm*faceName: DejaVu Sans Mono
xterm*faceSize: 10
xterm*loginShell: true
xterm*savelines: 2000
xterm*charClass: 33:48,36-47:48,58-59:48,61:48,63-64:48,95:48,126:48

